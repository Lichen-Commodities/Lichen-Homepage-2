---
import '@fontsource-variable/inter';
import '../assets/styles/fonts.css';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #487f59; /* lichen-dark-green */
    --aw-color-secondary: #a2d3b4; /* lichen-light-green */
    --aw-color-accent: #efde7c; /* lichen-yellow */
    
    /* New brand colors */
    --aw-color-gold: #b09763;
    --aw-color-beige: #dfd7c6;
    --aw-color-gray: #7d7875;
    --aw-color-teal: #668a84;
    --aw-color-sage: #89b09f;

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #487f59; /* lichen-light-green */
    --aw-color-secondary: #efde7c; /* lichen-yellow */
    --aw-color-accent: #a2d3b4; /* lichen-dark-green */
    
    /* New brand colors - dark mode */
    --aw-color-gold: #b09763;
    --aw-color-beige: #dfd7c6;
    --aw-color-gray: #7d7875;
    --aw-color-teal: #668a84;
    --aw-color-sage: #89b09f;

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
